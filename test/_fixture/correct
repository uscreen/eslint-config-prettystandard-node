/**
 * We don't use file extension `.js` to avoid problems with automatic linting in editor
 */

/**
 * generator-star-spacing: off
 */
function* generator() {}

/**
 * 'space-before-function-paren': 'off',
 */
function fn() {}

/**
 * no semicolons
 */
const string = ''

/**
 * single quotes
 */
const array = ['one', 'two']

/**
 * no trailing comma
 */
const object = {
  one: 'first',
  two: 'second'
}

/**
 * bracket spacing
 */
const summary = { array, object }

module.exports = {
  string,
  summary,
  fn,
  generator
}
